// 场景处理
function _scene() {
	// 遇到0，就over
	// 如果后面直接是0，那就没什么事了
	var section_n = byte.readShort()// 场景内部分的数量
	byte.setPosition(byte.getPosition() + 2)// 跳过两个不知所云的字节
	dump(section_n, "section_n")

	for(var i = 0; i < section_n; i++) {
		_section()
	}

	// byte.setPosition(byte.getPosition() + 4)// 跳过两个不知所云的字节
}

// 部分处理
function _section() {
	byte.setPosition(byte.getPosition() + 6)
	val = byte.readString()
	script_content += "// " + val + "\n"// 添加一条注释
	script_content += "if("

	var n = 0
	while(true) {
		if(_cmds()) {// 表示遇到0了，可以结束了
			break
		}
		n++
	}
	if(n == 0) {
		script_content += "true) {\n"// 无条件成立
	} else {
		script_content = script_content[0:-2]// 舍弃后面的两个&&
		script_content += ") {\n"// 表示内部有条件限制
	}
	byte.setPosition(byte.getPosition() + 2)

	// 内部的指令
	while(true) {
		if(_cmds()) {
			break
		}
	}
	script_content += "}\n"


}

// 处理指令
function _cmds() {
	var ret = 0
	var first

	var key = byte.readShort()

	dump(key, "key")
	switch(key) {
	case 0:// 事件结束
		// 添加事件结束
		if(sub_event) {
			sub_event = false
			script_content += "}\n"
		} else {
			ret = 1// 表示结束了
		}
		break
	case 1:// 子事件设定
		sub_event = true
		script_content += "{\n"// 起始就是一个 域
		break
	case 2:// 内部信息
		byte.setPosition(byte.getPosition() + 2)// 跳过两个字节
		val = byte.readString()
		script_content += "// "
		script_content += val
		script_content += "\n"// 添加一条注释
		byte.setPosition(byte.getPosition() + 2)// 跳过两个字节
		break
	case 5:// 变量测试
		// 变量测试
		byte.setPosition(byte.getPosition() + 2)

		var n = byte.readShort()// 获取true测试的个数
		if(n > 0) {
			var first3 = true
			for(var i = 0; i < n; i++) {
				if(first3) {
					first3 = false
				} else {
					script_content += "&&"
				}
				val = byte.readShort()
				script_content += "vars[" 
				script_content += val
				script_content += "]"
			}
			script_content += "&&"
		}

		byte.setPosition(byte.getPosition() + 2)
		n = byte.readShort()
		if(n > 0) {

			var first3 = true
			for(var i = 0; i < n; i++) {
				if(first3) {
					first3 = false
				} else {
					script_content += "&&"
				}
				val = byte.readShort()
				script_content += "!vars[" 
				script_content += val
				script_content += "]"
			}
		}
		script_content += "&&"
		break
	case 8:// 菜单处理
		script_content += "setMenu("
		byte.setPosition(byte.getPosition() + 2)
		val = byte.readShort()
		script_content += val
		script_content += ")\n"
		break

// 02 00 00 00 01 00 0e 00
// 5-6 表示部分开始
// 7-8 表示场景数据的长度

var base = require("base")
var self

var byte
var script_content = ""
var val

// var section_first
var sub_event = false// 子事件，嵌套统计

function main(argc) {
	var err = 0
	do {
		self = base.readJson("cfg.json")
		if(!self) {
			dump("cfg.json", "打开文件失败")
			break
		}
		if(err = process()) {
			break
		}
	} while(false)
	if(err) {
		trace("程序非正常结束")
	}
}

